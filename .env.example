# API Configuration
API_BASE_URL=https://fakestoreapi.com

# UI Configuration
UI_BASE_URL=https://www.saucedemo.com

# Test User Credentials (SauceDemo)
UI_TEST_USERNAME=standard_user
UI_TEST_PASSWORD=secret_sauce

# Browser Configuration
BROWSER=chromium
HEADLESS=true
TIMEOUT=30000

# Test Environment
ENVIRONMENT=test

# Logging
LOG_LEVEL=INFO

# Mock API Server (for CI/CD)
# Set to true to use WireMock mock server instead of real API
MOCK_API=false

# TestRail Integration (optional)
# Enable to sync test cases and report results to TestRail
TESTRAIL_ENABLED=false
TESTRAIL_URL=https://your-instance.testrail.io
TESTRAIL_USERNAME=your-email@example.com
TESTRAIL_API_KEY=your-api-key-here
TESTRAIL_PROJECT_ID=1
